<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('./partials/head') %>
</head>

<body>
  <div class="container">
    <%- include('./styles/styles')-%>
      <h1>Vista de Productos</h1>
      <% if(productsLength){ %>
        <div class="table-responsive">
          <table class="table table-dark">
            <tr>
              <th>NOMBRE</th>
              <th>PRECIO</th>
              <th>IMAGEN</th>
            </tr>
            <%products.forEach(function(product) {%>
              <tr>
                <td>
                  <%=product.title%>
                </td>
                <td>$<%=product.price%>
                </td>
                <td>
                  <img width="40" src=<%=product.thumbnail%> alt="not found">
                </td>
              </tr>
              <%});%>
          </table>
        </div>
        <% } else{ %>
          <h3 class="alert alert-danger">No se encontraron productos</h3>
          <% } %>
            <a href="/" type="button" class="btn btn-dark">Nuevo producto</a>
  </div>
</body>

</html>